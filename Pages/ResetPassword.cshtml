@page "{token}"
@model ResetPasswordModel

<h2>Reset Password</h2>

<form method="post">
    <input type="hidden" name="Token" value="@Model.Token" />
    <div>
        <label>New Password:</label>
        <input type="password" name="Password" required />
    </div>
    <button type="submit">Reset Password</button>
</form>
